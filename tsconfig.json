{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": false,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@shared/*": [ "shared/*" ]
    }
  },
  "include": ["bin", "commands", "shared"],
  "exclude": ["node_modules", "**/*spec.ts"]
}
