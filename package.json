{
  "name": "ezci",
  "version": "2.0.0",
  "description": "Easy CI is a CLI to trigger pipelines for rapid continuous integration",
  "scripts": {
    "build": "tsc",
    "start": "ts-node bin/ezci.ts",
    "lint": "eslint '{bin,commands}/**/*.ts' --fix",
    "publish": "npm run publish:latest",
    "publish:latest": "npm publish --tag latest",
    "publish:next": "npm publish --tag next",
    "test": "jest",
    "test:cov": "jest --coverage",
    "clean": "rimraf bin/**/*.js commands/**/*.js shared/**/*.js"
  },
  "bin": {
    "ezci": "bin/ezci.js"
  },
  "engines": {
    "node": ">= 10",
    "npm": ">= 6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpl0t/ezci.git"
  },
  "keywords": [
    "cli",
    "cicd",
    "pipeline"
  ],
  "author": "Johannes Weih",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpl0t/ezci/issues"
  },
  "homepage": "https://github.com/xpl0t/ezci#readme",
  "dependencies": {
    "@caporal/core": "^2.0.2",
    "chalk": "^5.0.0",
    "inquirer": "^8.2.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@shared/(.*)": "<rootDir>/shared/$1"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "cobertura"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./coverage"
  }
}
